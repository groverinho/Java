import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.Scanner;


public class FriendshipNetworks {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int n,i,j,k,a,counter,tag;
	    while(in.hasNextInt())
	    {
	    	n = in.nextInt();
	    	ArrayList<Integer> vec = new ArrayList<Integer>();
	        for(i=0; i<n; i++)
	        {
	         vec.add(in.nextInt());
	        }

	        Collections.sort(vec);

	        counter=0;
	        tag=0;

	        if(vec.get(0)>=n)
	        {
	           System.out.println("0");
	           vec.clear();
	            continue;
	        }
	        else
	        {
	            for(i=0; i<n; i++)
	            {
	                if(vec.get(i)%2==1)
	                {
	                    counter++;
	                }
	            }
	            if(counter%2==1)
	            {
	            	System.out.println("0");
	            	vec.clear();
	                continue;
	            }
	        }

	        while(n>0)
	        {
	            k=vec.get(0);

	            vec.remove(0);

	            for(j=0;j<k;j++)
	            {
	                vec.get(j)--;
	                if(vec.get(j)<0)
	                {
	                    tag=1;
	                    break;
	                }
	            }
	            if(tag==1)
	            {
	                break;
	            }
	            Collections.sort(vec);
	        }
	        if(tag==1)
	        {
	        	System.out.println("0");
	        }
	        else
	        {
	        	System.out.println("1");
	        }
	        vec.clear();
	    }

	}

}
